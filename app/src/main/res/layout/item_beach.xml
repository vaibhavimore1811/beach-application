<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_150"
    android:background="@drawable/card_bg"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/imageViewBeachImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/recentimage1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewBeachName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="AM Lake"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="@dimen/sp_20"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageViewBeachImage"
        android:layout_alignTop="@+id/imageViewBeachImage" />

    <TextView
        android:id="@+id/country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/app_name"
        android:fontFamily="@font/open_sans"
        android:textSize="@dimen/sp_16"
        android:visibility="visible"
        android:layout_below="@+id/textViewBeachName"
        android:layout_alignStart="@+id/textViewBeachName" />

    <TextView
        android:id="@+id/textViewBeachDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        android:fontFamily="@font/open_sans"
        android:textSize="@dimen/sp_16"
        android:layout_below="@+id/country_name"
        android:layout_alignStart="@+id/country_name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="37dp"
        android:layout_height="99dp"
        android:src="@drawable/arrow_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
