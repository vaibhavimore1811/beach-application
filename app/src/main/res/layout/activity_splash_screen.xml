<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dim_50"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".activity.SplashScreen">
    <ImageView
        android:id="@+id/id1_logo"
        android:layout_width="@dimen/dim_250"
        android:layout_height="@dimen/dim_250"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/logo_beach"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/id2_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/sp_20"
        android:transitionName="T1_logo_Text" />
    <TextView
        android:id="@+id/id3_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slogan"
        android:fontFamily="@font/open_sans"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dim_1"/>

</LinearLayout>