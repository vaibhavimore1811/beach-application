<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_16"
    android:elevation="@dimen/dim_12"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/grayLighter"
    app:cardCornerRadius="@dimen/dim_12"
    app:cardElevation="@dimen/dim_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_20">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/imgAlert"
                android:layout_width="@dimen/dim_100"
                android:layout_height="@dimen/dim_100"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/success"
                app:lottie_autoPlay="true"
                android:layout_gravity="center"
                android:backgroundTint="@color/backgroundColor"
                android:gravity="center"
                app:lottie_loop="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtSuccessMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSuccessOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/primaryColor"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/close"
            android:textColor="@color/backgroundColor" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
